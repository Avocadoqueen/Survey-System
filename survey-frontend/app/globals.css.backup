@import "tailwindcss";

:root {
  --background: oklch(1 0 0); /* White background */
  --foreground: oklch(0.2 0 0); /* Dark gray text */
  --card: oklch(0.98 0 0); /* Light gray card background */
  --card-foreground: oklch(0.2 0 0); /* Dark gray card text */
  --popover: oklch(1 0 0); /* White popover */
  --popover-foreground: oklch(0.2 0 0); /* Dark gray popover text */
  --primary: oklch(0.35 0.15 15); /* Maroon/ox blood red primary */
  --primary-foreground: oklch(1 0 0); /* White text on primary */
  --secondary: oklch(0.96 0 0); /* Light gray secondary */
  --secondary-foreground: oklch(0.2 0 0); /* Dark gray text on secondary */
  --muted: oklch(0.94 0 0); /* Muted gray */
  --muted-foreground: oklch(0.45 0 0); /* Medium gray text */
  --accent: oklch(0.2 0 0); /* Dark gray accent */
  --accent-foreground: oklch(1 0 0); /* White text on accent */
  --destructive: oklch(0.577 0.245 27.325);
  --destructive-foreground: oklch(1 0 0);
  --border: oklch(0.9 0 0); /* Light gray border */
  --input: oklch(1 0 0); /* White input background */
  --ring: oklch(0.35 0.15 15 / 0.5); /* Maroon focus ring */
  --chart-1: oklch(0.35 0.15 15); /* Maroon chart color */
  --chart-2: oklch(0.45 0.12 25); /* Darker red chart color */
  --chart-3: oklch(0.25 0.18 10); /* Deep maroon chart color */
  --chart-4: oklch(0.6 0.08 30); /* Light red chart color */
  --chart-5: oklch(0.7 0.05 35); /* Lightest red chart color */
  --radius: 0.625rem;
  --sidebar: oklch(0.35 0.15 15); /* Maroon sidebar */
  --sidebar-foreground: oklch(1 0 0); /* White sidebar text */
  --sidebar-primary: oklch(0.35 0.15 15); /* Maroon sidebar primary */
  --sidebar-primary-foreground: oklch(1 0 0); /* White sidebar primary text */
  --sidebar-accent: oklch(0.2 0 0); /* Dark gray sidebar accent */
  --sidebar-accent-foreground: oklch(1 0 0); /* White sidebar accent text */
  --sidebar-border: oklch(0.9 0 0); /* Light gray sidebar border */
  --sidebar-ring: oklch(0.35 0.15 15 / 0.5); /* Maroon sidebar focus ring */
}

.dark {
  --background: oklch(0.1 0 0); /* Dark background */
  --foreground: oklch(0.95 0 0); /* Light text */
  --card: oklch(0.15 0 0); /* Dark card */
  --card-foreground: oklch(0.95 0 0); /* Light card text */
  --popover: oklch(0.1 0 0); /* Dark popover */
  --popover-foreground: oklch(0.95 0 0); /* Light popover text */
  --primary: oklch(0.45 0.15 15); /* Lighter maroon for dark mode */
  --primary-foreground: oklch(1 0 0); /* White text on primary */
  --secondary: oklch(0.2 0 0); /* Dark gray secondary */
  --secondary-foreground: oklch(0.95 0 0); /* Light text on secondary */
  --muted: oklch(0.25 0 0); /* Dark muted */
  --muted-foreground: oklch(0.6 0 0); /* Medium gray text */
  --accent: oklch(0.25 0 0); /* Dark accent */
  --accent-foreground: oklch(0.95 0 0); /* Light text on accent */
  --destructive: oklch(0.396 0.141 25.723);
  --destructive-foreground: oklch(0.637 0.237 25.331);
  --border: oklch(0.25 0 0); /* Dark border */
  --input: oklch(0.15 0 0); /* Dark input */
  --ring: oklch(0.45 0.15 15 / 0.5); /* Lighter maroon focus ring */
  --chart-1: oklch(0.45 0.15 15); /* Lighter maroon chart */
  --chart-2: oklch(0.55 0.12 25); /* Medium red chart */
  --chart-3: oklch(0.35 0.18 10); /* Deep maroon chart */
  --chart-4: oklch(0.7 0.08 30); /* Light red chart */
  --chart-5: oklch(0.8 0.05 35); /* Lightest red chart */
  --sidebar: oklch(0.15 0 0); /* Dark sidebar */
  --sidebar-foreground: oklch(0.95 0 0); /* Light sidebar text */
  --sidebar-primary: oklch(0.45 0.15 15); /* Lighter maroon sidebar primary */
  --sidebar-primary-foreground: oklch(1 0 0); /* White sidebar primary text */
  --sidebar-accent: oklch(0.25 0 0); /* Dark sidebar accent */
  --sidebar-accent-foreground: oklch(0.95 0 0); /* Light sidebar accent text */
  --sidebar-border: oklch(0.25 0 0); /* Dark sidebar border */
  --sidebar-ring: oklch(0.45 0.15 15 / 0.5); /* Lighter maroon sidebar focus ring */
}

@layer base {
  * {
    border-color: var(--border);
  }
  body {
    background-color: var(--background);
    color: var(--foreground);
  }
}
